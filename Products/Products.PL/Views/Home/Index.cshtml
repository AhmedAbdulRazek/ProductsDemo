@model IEnumerable<Products.BL.ViewModel.ProductVM>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
<form asp-action="Index" class="col-md-6 my-1 p-2">
    <div class="row">
        <div class="form-group d-flex align-items-center justify-content-center">
            
            <select name="CatId" value="CatId" class="form-control my-2" asp-items="(SelectList)ViewBag.Cat">
                <option value="" selected disabled>category</option>
                <option value="0">All</option>
            </select>

            <input type="submit" value="Search" class="btn btn-primary mx-2" />
        </div>



    </div>
</form>


 <div class="container">
    <div class="row">
        
            @foreach (var item in Model)
            {
                <div class="card col-md-3 m-1">
                    <div class="card-body">
                        <h class="card-title">@item.Name</h>
                        <p class="card-text">Price: @item.Price.ToString("c")</p>
                        <p class="card-text">Duration: @item.Duration</p>
                    <p class="card-text">Start Date: @item.StartDate.ToString("yyyy-MM-dd")</p>
                    <p class="card-text">Creation Date: @item.CreationDate.ToString("yyyy-MM-dd")</p>
                        <p class="card-text">Category: @item.CategoryName</p>
                        <p class="card-text">Created By: @item.UserName</p>
                        <a class="btn btn-primary" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </div>
                </div>
            }

    </div>
</div>