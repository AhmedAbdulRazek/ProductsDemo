@model Products.BL.ViewModel.ProductVM
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>



<form class="form-group" asp-controller="Products" asp-action="Edit">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group mt-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group  mt-2">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group  mt-2">
        <label asp-for="Duration"></label>
        <input asp-for="Duration" class="form-control" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group  mt-2">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    @*<div class="form-group  mt-2">
        <label asp-for="CreationDate"></label>
        <input type="hidden" asp-for="CreationDate" class="form-control" />
        <span asp-validation-for="CreationDate" class="text-danger"></span>
    </div>*@
    <div class="form-group  mt-2">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" readonly/>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group  mt-2">
        <label asp-for="CategoryID">Category Name</label>
        <select asp-for="CategoryID" class="form-control" asp-items="(SelectList)ViewBag.CategoriesList"></select>
    </div>



    <div class="form-group mt-2">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreationDate"/>
        <input type="hidden" asp-for="UserId" />
        <a asp-controller="Products" asp-action="Index" class="btn btn-warning">Back To Home</a>
        <input type="submit" value="Edit" class="btn btn-primary" />
    </div>


</form>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
