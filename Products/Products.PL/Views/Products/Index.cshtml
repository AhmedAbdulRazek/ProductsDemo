@model IEnumerable<Products.BL.ViewModel.ProductVM>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a class="btn btn-primary" asp-controller="Products" asp-action="Create">Add New Product</a>
<br />
<br />

<table class="table table-hover table-responsive">

    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Duration</th>
            <th>StartDate</th>
            <th>CreationDate</th>
            <th>CategoryName</th>
            <th>UserName</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Duration</td>
                <td>@item.StartDate</td>
                <td>@item.CreationDate</td>
                <td>@item.CategoryName</td>
                <td>@item.UserName</td>

                <td><a class="btn btn-primary" asp-controller="Products" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                <td><a class="btn btn-warning" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
                <td><a class="btn btn-danger" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
            </tr>
        }

    </tbody>

</table>
